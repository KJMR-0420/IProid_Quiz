<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quizzes_Levels.Result">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:padding="10dp"
          android:layout_marginTop="100dp"
          android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:padding="10dp"
              android:text="Total Quesions : "
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtTotalQuestionsR"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:padding="10dp"
              android:text="00 "
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold"
              android:layout_gravity="center_horizontal" />

        </LinearLayout>  <!--Total Questions-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:padding="10dp"
              android:text="Coins : "
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtCoinsR"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:padding="10dp"
              android:text="00 "
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold"
              android:layout_gravity="center_horizontal" />

        </LinearLayout>  <!--Coins-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:padding="10dp"
              android:text="Correct : "
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtCorrectR"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:padding="10dp"
              android:text="00 "
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold"
              android:layout_gravity="center_horizontal" />

        </LinearLayout>  <!--Correct-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <TextView
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:layout_weight="1.5"
              android:padding="10dp"
              android:text="Wrong : "
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/txtWrongR"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:padding="10dp"
              android:text="00 "
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="22sp"
              android:textStyle="bold"
              android:layout_gravity="center_horizontal" />

        </LinearLayout>  <!--Wrong-->



      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
        <Button
            android:id="@+id/bt_PlayAgainR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:text="Play Again"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/bt_PlayScreenR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:text="Play Screen"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/bt_PlayNextLevelR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:text="Play Next Level"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />
      </LinearLayout>




    </LinearLayout>
  </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>